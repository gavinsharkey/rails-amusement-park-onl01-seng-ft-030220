<h1>Sign Up</h1>

<%= form_for(@user) do |f| %>
  <%= f.label :name, 'Name: ' %>
  <%= f.text_field :name %><br />

  <%= f.label :height, 'Height: ' %>
  <%= f.number_field :height %><br />

  <%= f.label :happiness, 'Happiness: ' %>
  <%= f.number_field :happiness %><br />

  <%= f.label :nausea, 'Nausea: ' %>
  <%= f.number_field :nausea %><br />

  <%= f.label :tickets, 'Tickets: ' %>
  <%= f.number_field :tickets %><br />

  <%= f.label :password, 'Password: ' %>
  <%= f.password_field :password %><br />

  <%= f.label :admin, 'Admin? ' %>
  <%= f.check_box :admin %><br />

  <%= f.submit %>
<% end %>